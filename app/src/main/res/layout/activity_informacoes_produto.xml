<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformacoesProdutoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E8F5E9"
        android:padding="16dp">

        <!-- Logotipo ou título -->
        <TextView
            android:id="@+id/logoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Semente Verde"
            android:textColor="#388E3C"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Nome do produto -->
        <TextView
            android:id="@+id/nomeTextViewDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:text="Nome do Produto"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Imagem do produto -->
        <ImageView
            android:id="@+id/produtoImageViewDetalhes"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/imagem_do_produto"
            android:scaleType="centerInside" />

        <!-- Preço -->
        <TextView
            android:id="@+id/precoTextViewDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="R$ 10,00 "
            android:textColor="#000"
            android:textSize="16sp" />

        <!-- Quantidade -->
        <TextView
            android:id="@+id/quantidadeTextViewDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Quantidade: 0"
            android:textColor="#000"
            android:textSize="16sp" />

        <!-- Categoria -->
        <TextView
            android:id="@+id/categoriaTextViewDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Categoria: Geral"
            android:textColor="#000"
            android:textSize="16sp" />

        <!-- Botão Adicionar -->
        <Button
            android:id="@+id/adicionarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:backgroundTint="#4CAF50"
            android:drawableLeft="@drawable/ic_carrinho"
            android:drawablePadding="8dp"
            android:padding="10dp"
            android:text="Adicionar"
            android:textColor="#FFF"
            android:textStyle="bold" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>